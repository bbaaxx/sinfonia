{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "sinfonia-maestro": {
      "mode": "primary",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Primary orchestration persona — coordinates all other personas, manages workflow state, routes tasks via @sinfonia-* delegation"
    },
    "sinfonia-libretto": {
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true
      },
      "description": "Product planning persona — authors PRDs, requirements documents, and user stories"
    },
    "sinfonia-amadeus": {
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true
      },
      "description": "Architecture and design persona — produces technical specs, system design documents, and implementation plans"
    },
    "sinfonia-coda": {
      "mode": "subagent",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Implementation persona — writes, edits, and executes code"
    },
    "sinfonia-rondo": {
      "mode": "subagent",
      "tools": {
        "read": true,
        "bash": true
      },
      "description": "Review and QA persona — performs code review, runs tests, and validates quality"
    },
    "sinfonia-metronome": {
      "mode": "subagent",
      "tools": {
        "read": true
      },
      "description": "Context and memory management persona — handles compaction, context recovery, and workflow state summarisation"
    }
  }
}
